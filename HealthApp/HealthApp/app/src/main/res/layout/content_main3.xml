<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main3"

    tools:context="com.example.user.healthapp.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:background="#fff"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/i1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/family_doctor" />

        <ImageView
            android:id="@+id/i2"
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:src="@drawable/profile" />


    </LinearLayout>




    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Family Doctor"
        android:textColor="#000"
        android:textSize="14dp"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_below="@+id/linearLayout"
        android:layout_toLeftOf="@+id/textView15"
        android:layout_toStartOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="79dp"
        android:layout_marginRight="79dp"
        android:text="User Profile"
        android:textColor="#000"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:background="#fff"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/i3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.97"
            android:src="@drawable/upload_medical_doc" />

        <ImageView
            android:id="@+id/i5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.06"
            android:src="@drawable/view_report" />


    </LinearLayout>
    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Documents"
        android:textColor="#000"
        android:textSize="14dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="View Reports"
        android:textColor="#000"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:background="#fff"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/i9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/health_info" />

        <ImageView
            android:id="@+id/i10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/renewal" />





    </LinearLayout>




    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:textAlignment="center"
        android:text="Health Info"
        android:textColor="#000"
        android:textSize="14dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignRight="@+id/textView22"
        android:layout_alignEnd="@+id/textView22"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Renewal"
        android:textColor="#000"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:background="#fff"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView21"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/i22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/emergency_call" />

        <ImageView
            android:id="@+id/i23"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             />





    </LinearLayout>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Emergency call"
        android:textColor="#000"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21" />


</RelativeLayout>




