<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main5"
    tools:context="com.example.user.healthapp.MainActivity">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/docsList"
        android:layout_margin="30dp"/>

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"

        android:visibility="gone"
        android:layout_height="match_parent">

     <ImageView android:layout_height="259dp"
        android:layout_width="306dp"
        android:id="@+id/imageView"/>



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
android:visibility="gone"

      >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/closeImage"
            android:padding="5dp"

            android:layout_margin="5dp"
            android:src="@drawable/ic_action_cancel"/>
        <ImageView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:src="@drawable/no_pic_placeholder_with_border"
            android:layout_height="400dp"
            android:id="@+id/viewImage"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/share"
            android:text="Share"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/viewImage"
            android:background="@drawable/button_border"/>
    </RelativeLayout>

</RelativeLayout>
